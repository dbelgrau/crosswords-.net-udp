<Page x:Class="Crosswords.Pages.EndGame.EndGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Crosswords.Pages.EndGame"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="EndGamePage"
      FontSize="40">

    <Grid>
        <TextBlock Text="{Binding EndGameText, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Kontynuuj" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Command="{Binding EndGameCommand}"/>
    </Grid>

</Page>
